{
	"name": "@terrazzo/tiles",
	"version": "0.0.1",
	"author": {
		"name": "Drew Powers",
		"email": "drew@pow.rs"
	},
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+terrazzoapp/glass.git"
	},
	"sass": "./tokens/index.scss",
	"exports": {
		"./dist/*": "./*",
		"./*": "./*"
	},
	"scripts": {
		"build": "del dist && mkdir -p dist && run-p -s prepare:* && cp -r src/* dist && del dist/lib && tsc",
		"build:docs": "run-s -s prepare:* && vite build",
		"dev": "run-p -s prepare:* && vite dev",
		"format": "prettier --write src",
		"lint": "run-p -s lint:*",
		"lint:js": "eslint \"src/**/*.{js,ts,svelte}\"",
		"lint:prettier": "prettier --check \"src/**/*.{js,ts,svelte}\"",
		"prepare:tokens": "co build",
		"prepublishOnly": "pnpm run build",
		"test": "run-p -s test:*",
		"test:js": "vitest run",
		"test:ts": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"update:shiki": "del docs/static/assets/shiki && cp -r node_modules/shiki docs/static/assets",
		"version": "pnpm run build && changeset version && pnpm i"
	},
	"peerDependencies": {
		"svelte": ">= 3"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@cobalt-ui/cli": "^1.4.0",
		"@cobalt-ui/plugin-sass": "^1.2.3",
		"@sveltejs/adapter-cloudflare": "^2.3.2",
		"@sveltejs/kit": "^1.22.5",
		"@sveltejs/package": "^2.2.1",
		"@sveltejs/vite-plugin-svelte": "^2.4.5",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"sass": "^1.65.1",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.1"
	},
	"dependencies": {
		"nanoid": "^4.0.2",
		"shiki": "^0.14.3"
	}
}
